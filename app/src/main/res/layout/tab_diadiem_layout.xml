<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DiadiemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauXamDam"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDDCuaBan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/mauTrang"
            android:text="Của bạn"
            android:textAppearance="@style/CustomText" />

        <Button
            android:id="@+id/btnDDXemNhieu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mauTrang"
            android:text="Xem nhiều"
            android:textAppearance="@style/CustomText" />

        <Button
            android:id="@+id/btnDDNoiBat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/mauTrang"
            android:text="Nổi bật"
            android:textAppearance="@style/CustomText" />

        <Button
            android:id="@+id/btnDDDaLuu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/mauTrang"
            android:text="Đã lưu"
            android:textAppearance="@style/CustomText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"></LinearLayout>
</LinearLayout>