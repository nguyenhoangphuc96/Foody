<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_dangnhap"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="46"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/back_login"
            android:background="@drawable/btn_clicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:clickable="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Đăng nhập Foody"
            android:textAppearance="@style/CustomTextHeader"
            android:textColor="@color/mauTrang" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:orientation="vertical"
        android:paddingTop="90dp"
        android:weightSum="128">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="24dp"
                android:layout_weight="50"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:src="@drawable/ic_share_facebook" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Facebook"
                    android:textAppearance="@style/CustomTextLarge"
                    android:textColor="@color/mauTrang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:layout_weight="50"
                android:background="@color/mauDo"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:padding="2dp"
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:src="@drawable/google_plus" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Google"
                    android:textAppearance="@style/CustomTextLarge"
                    android:textColor="@color/mauTrang" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="26"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:layout_weight="50"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_share_yahoo" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Yahoo"
                    android:textAppearance="@style/CustomTextLarge"
                    android:textColor="@color/mauTrang" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:layout_weight="50"
                android:background="@color/mauLamNhat"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    app:srcCompat="@drawable/ic_share_twitter" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Twitter"
                    android:textAppearance="@style/CustomTextLarge"
                    android:textColor="@color/mauTrang" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnDangNhapVoiSDT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="26"
            android:background="@drawable/shape_transparent_background"
            android:text="Đăng nhập với số điện thoại"
            android:textAppearance="@style/CustomTextLarge"
            android:textColor="@color/mauTrang" />

        <Button
            android:id="@+id/btnDangNhapVoiEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="26"
            android:background="@drawable/shape_transparent_background"
            android:text="Đăng nhập với Email"
            android:textAppearance="@style/CustomTextLarge"
            android:textColor="@color/mauTrang" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:minLines="2"
            android:textSize="12dp"
            android:text="Chúng tôi sẽ không sử dụng thông tin của bạn với bất kỳ mục đích nào khác"
            android:textAppearance="@style/CustomText"
            android:textColor="@color/mauTrang" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="37"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="100">

        <Button
            android:id="@+id/btnDangKyTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:textSize="15dp"
            android:text="Đăng ký"
            android:textAppearance="@style/CustomTextBold"
            android:textColor="@color/mauTrang" />
    </LinearLayout>


</LinearLayout>