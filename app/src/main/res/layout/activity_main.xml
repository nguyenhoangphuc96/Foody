<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sino.foodyv1.MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/mauDo">



            <ImageButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:src="@drawable/iconfood25"
                android:background="@color/mauDo"
                android:layout_weight="45"
                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="1dp"
                android:background="@drawable/tab_border">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabHienThi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tabIndicatorColor="@null"
                    app:tabTextAppearance="@style/CustomTabText"
                    app:tabBackground="@drawable/tab_selected">

                </android.support.design.widget.TabLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpHienThi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>
            </LinearLayout>


        </LinearLayout>

        <ImageButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCong"
            android:layout_weight="45"
            android:textSize="30sp"
            android:background="@color/mauDo"
            android:src="@drawable/iconcong15"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

    </LinearLayout>




</LinearLayout>
