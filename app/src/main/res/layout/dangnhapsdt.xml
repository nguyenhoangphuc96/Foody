<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/mauList">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:gravity="center_horizontal|center_vertical"
        android:text="Nhập số di động của bạn"
        android:textAppearance="@style/CustomTextHeader" />

    <LinearLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/txtMaVungSDT"
            android:textAppearance="@style/CustomText"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mauLamNhat"
            android:layout_weight="65"
            android:text="+84" />

        <EditText
            android:id="@+id/etxtNhapSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:textAppearance="@style/CustomText"
            android:ems="10"
            android:paddingLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:background="@color/mauLamNhat"
            android:inputType="textPersonName"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="26"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal|center_vertical|top"
        android:text="Nhấn vào Tiếp để xác minh tài khoản bằng Account Kit của Facebook. Bạn không cần có tài khoản Facebook để sử dụng Account Kit. Chúng tôi có thể gửi SMS để xác minh số của bạn. Bạn có thể phải chịu cước tin nhắn và dữ liệu. Tìm hiểu các Facebook sử dụng thông tin của bạn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="19"
        android:gravity="top"
        android:padding="20dp">

        <Button
            android:id="@+id/btnTiepTucDangNhap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/CustomTextLarge"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Tiếp" />
    </LinearLayout>
</LinearLayout>