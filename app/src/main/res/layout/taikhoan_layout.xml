<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mauXamDam"
        android:orientation="vertical"
        android:weightSum="100">



            <LinearLayout
                android:background="@color/mauDoDam"
                android:id="@+id/TopSection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="46">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal|center|clip_vertical|clip_horizontal"
                    android:orientation="vertical">



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Tài khoản"
                        android:textColor="@color/mauTrang"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>



        <LinearLayout
            android:id="@+id/MiddleSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:background="@color/mauDen"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingRight="2dp"
            android:paddingTop="15dp"
            android:weightSum="100">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|fill_horizontal"
                android:layout_weight="45"
                android:paddingLeft="8dp"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/txtDangNhapOld"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="Đăng nhập"
                android:textColor="@color/mauTrang"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="45"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/iconcong15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>