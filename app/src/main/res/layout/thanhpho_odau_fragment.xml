<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/mauXamList">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="46"
        android:weightSum="100"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:text="TP.HCM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtHienThiThanhPho"
            android:layout_weight="30"
            android:textAppearance="@style/CustomText"
            android:gravity="center_vertical" />

        <Button
            android:text="Đổi tỉnh thành"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnDoiThanhPho"
            android:textAppearance="@style/CustomText"
            android:layout_weight="70"
            android:padding="1dp"
            android:background="@color/mauXamDam"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/mauXam"
        android:layout_height="0.5dp"></FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <ListView
            android:id="@+id/lvThanhPhoODau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="46"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHuy_Thanhpho_ODau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mauTrang"
            android:text="Hủy"
            android:textAppearance="@style/CustomText" />
    </LinearLayout>

</LinearLayout>